#!/usr/bin/env ruby

require File.expand_path(File.dirname(__FILE__) + "/../lib/nautilus/create.rb")
require File.expand_path(File.dirname(__FILE__) + "/../lib/nautilus/errors.rb")

include Nautilus::Errors

require 'rubygems'
require 'nautilus'

def usage
  "Usage: #{File.basename(__FILE__)} create new_project_name"
end

case ARGV[0]
when 'create', '--create'
  begin
    Nautilus::Create.run!(ARGV[1])
  rescue Nautilus::InvalidInput => e
    error_with_message(e.message)
  end
when 'help', '--help'
  puts usage
else
  puts "Unknown subcommand: #{ARGV[0]}\n#{usage}"
end